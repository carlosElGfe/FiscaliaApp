<p id="notice"><%= notice %></p>

<h1>Thiefs</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @thiefs.each do |thief| %>
      <tr>
        <td><%= link_to 'Show', thief %></td>
        <td><%= link_to 'Edit', edit_thief_path(thief) %></td>
        <td><%= link_to 'Destroy', thief, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

